---
import DocsLayout from '@/layouts/DocsLayout.astro';
import Card from '@/components/ui/Card.astro';
import { docsNavSections } from '@/lib/navigation';

const base = import.meta.env.BASE_URL;
---

<DocsLayout title="Documentation">
  <div class="max-w-4xl">
    <h1 class="text-4xl font-bold text-foreground mb-4">Documentation</h1>
    <p class="text-xl text-muted-foreground mb-12">
      Everything you need to build digital workers with Greentic.
    </p>

    <div class="space-y-12">
      {
        docsNavSections.map((section) => (
          <div>
            <h2 class="text-2xl font-semibold text-foreground mb-4">{section.title}</h2>
            <div class="grid md:grid-cols-2 gap-4">
              {section.items.map((item) => (
                <a href={`${base}${item.href.slice(1)}`} class="group">
                  <Card hover class="h-full p-4">
                    <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors">
                      {item.title}
                    </h3>
                    {item.description && <p class="text-sm text-muted-foreground mt-1">{item.description}</p>}
                  </Card>
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</DocsLayout>
