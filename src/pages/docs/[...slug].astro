---
import { getCollection } from 'astro:content';
import DocsLayout from '@/layouts/DocsLayout.astro';

export async function getStaticPaths() {
  const docs = await getCollection('docs');
  return docs.map((doc) => ({
    params: { slug: doc.slug },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await doc.render();
---

<DocsLayout title={doc.data.title} description={doc.data.description}>
  <article class="max-w-4xl">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-foreground mb-2">{doc.data.title}</h1>
      {doc.data.description && <p class="text-xl text-muted-foreground">{doc.data.description}</p>}
    </header>
    <div class="prose-greentic">
      <Content />
    </div>
  </article>
</DocsLayout>
