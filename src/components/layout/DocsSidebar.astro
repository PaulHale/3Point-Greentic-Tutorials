---
import { docsNavSections } from '@/lib/navigation';

interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;
---

<aside class="sticky top-20 h-[calc(100vh-5rem)] overflow-y-auto pb-8">
  <nav class="space-y-6">
    {
      docsNavSections.map((section) => (
        <div class="space-y-2">
          <h4 class="font-semibold text-sm text-foreground px-3">{section.title}</h4>
          <ul class="space-y-1">
            {section.items.map((item) => (
              <li>
                <a
                  href={item.href}
                  class:list={[
                    'block px-3 py-2 text-sm rounded-md transition-colors',
                    currentPath === item.href
                      ? 'bg-primary/10 text-primary font-medium'
                      : 'text-muted-foreground hover:text-foreground hover:bg-muted',
                  ]}
                >
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </nav>
</aside>
